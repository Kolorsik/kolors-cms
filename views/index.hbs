<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link href='/css/halfmoon-variables.min.css' rel='stylesheet' />
    <title>Kolors CRM</title>
  </head>
  <body>

    <div class='page-wrapper with-sidebar'>

      {{> sidebar}}

      <div class='content-wrapper'>

        <div class='m-20 row'>
          <div class='col-10'>
            <input
              type='text'
              class='form-control'
              placeholder='Search by name of telephone'
            />
          </div>

          <div class='col-1 ml-5'>
            <button class='btn'>Search</button>
          </div>
        </div>

        {{#each users}}
          <div class='card'>
            <h2 class='card-title'>
              <a href='/users/{{this.id}}'>{{this.firstName}}
                {{this.lastName}}
                (age:
                {{this.age}})</a>
            </h2>
            <div class='text-left'>
              <a href='#' class='btn'>{{this.telephone}}</a>
            </div>
          </div>
        {{/each}}
      </div>
    </div>

  </body>
  <script src='/js/halfmoon.min.js'></script>
</html>